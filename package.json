{
	"name": "@cluue/monodev",
	"version": "1.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"preview": "vite preview",
		"prepublish": "npx changeset && npx changeset version && npm run build",
		"publish": "npm run prepublish && pnpm run -r --filter @cluue/mono publish",
		"package": "svelte-kit sync && svelte-package",
		"test": "vitest run --",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"build:icons": "ts-node --esm ./scripts/beforeBuildAndDev/icons.mjs",
		"build:styles": "node ./scripts/afterBuild/buildStyles.mjs",
		"build:packageTemplates": "node ./scripts/afterBuild/packageTemplates.mjs",
		"build:before": "npm run lint && npm run test && npm run build:icons",
		"build:after": "npm run build:styles && npm run build:packageTemplates",
		"build": "npm run build:before && npm run package && npm run build:after",
		"build:site": "svelte-kit sync && npm run build:before && vite build"
	},
	"author": "Nikita Fedorov",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"dependencies": {
		"@cluue/base": "workspace:*",
		"@cluue/calendar": "workspace:*",
		"@cluue/calendar-core": "workspace:*",
		"@cluue/calendar-utils": "workspace:*",
		"@cluue/config": "workspace:*",
		"@cluue/forms": "workspace:*",
		"@cluue/icons": "workspace:*",
		"@cluue/popover": "workspace:*",
		"@cluue/styles": "workspace:*",
		"@cluue/utils": "workspace:*",
		"dayjs": "^1.11.10",
		"svelte-floating-ui": "^1.5.8"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@sveltejs/adapter-auto": "^2.1.1",
		"@sveltejs/adapter-netlify": "^2.0.8",
		"@sveltejs/kit": "^1.27.7",
		"@sveltejs/package": "^2.2.3",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.10.4",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"autoprefixer": "^10.4.16",
		"dotenv": "^16.3.1",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.35.1",
		"glob": "^10.3.10",
		"postcss": "^8.4.32",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.1.16",
		"sass": "^1.69.5",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-virtual-scroll-list": "^1.3.0",
		"svgo": "^3.0.5",
		"ts-node": "^10.9.1",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^4.5.1",
		"vitest": "^0.34.6"
	},
	"type": "module"
}
