{
	"name": "@clue/mono",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"build:icons": "npx ts-node --esm scripts/beforeBuildAndDev/createIcons.ts",
		"build:styles": "node scripts/afterBuild/buildStyles.mjs",
		"build:before": "npm run build:icons",
		"build:after": "npm run build:styles",
		"build": " npm run build:before && npm run package && vite build && npm run build:after",
		"build:site": " svelte-kit sync && vite build"
	},
	"author": "Nikita Fedorov",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"dependencies": {
		"@clue/base": "./src/lib/packages/base",
		"@clue/config": "./src/lib/packages/config",
		"@clue/forms": "./src/lib/packages/forms",
		"@clue/icons": "./src/lib/packages/icons",
		"@clue/popover": "./src/lib/packages/popover",
		"@clue/styles": "./src/lib/packages/styles",
		"@clue/utils": "./src/lib/packages/utils",
		"svelte-floating-ui": "^1.5.4"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-netlify": "^2.0.8",
		"@sveltejs/kit": "^1.20.4",
		"@sveltejs/package": "^2.0.0",
		"@types/node": "^20.7.1",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.16",
		"dotenv": "^16.3.1",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"glob": "^10.3.4",
		"postcss": "^8.4.31",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.1.9",
		"sass": "^1.66.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"svelte-virtual-scroll-list": "^1.3.0",
		"svgo": "^3.0.2",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vite-plugin-svg-sprite": "^0.5.0",
		"vitest": "^0.34.0"
	},
	"type": "module"
}
